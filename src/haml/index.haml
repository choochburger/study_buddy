!!! 5
%html
  %head
    %meta{:name => "viewport", :content => "width=device-width, initial-scale=1"}
    %link{:rel => "stylesheet", 
          :type => "text/css",
          :href => "stylesheets/jquery.mobile.min.css"}
    %script{:type => "text/javascript", :src => "javascripts/jquery.min.js"}
    %script{:type => "text/javascript", :src => "javascripts/jquery.mobile.min.js"}
    %script{:type => "text/javascript", :src => "javascripts/handlebars.js"}
    / bootstrap data
    %script{:type => "text/javascript", :src => "javascripts/data.js"}
    %script{:type => "text/javascript", :src => "javascripts/application.js"}

/ main page: categories
%div{"data-role" => "page", :id => "main"}
  %div{"data-role" => "header"}
    <h4>Categories</h4>

  %ul{"data-role" => "listview", :id => "categories"}

  %div{"data-position" => "fixed",
       "data-role" => "footer"}
    %a{:href => "#quiz", "data-role" => "button"}
      Begin
/ end categories

/ quiz page
%div{"data-role" => "page", :id => "quiz"}
  %div{"data-position" => "fixed",
       "data-role" => "footer"}
    %a{:href => "#main", 
       "data-icon" => "home",
       "data-role" => "button", 
       "data-direction" => "reverse"}
      Back
/ end quiz

/ templates
%script{:id => "category-list-template",
        :type => "text/x-handlebars-template"}
  {{#each this}}
  %li
    %input{:type => "checkbox", :id => "checkbox-{{index}}"}
    %label{:for => "checkbox-{{index}}"}{{name}}
  {{/each}}
